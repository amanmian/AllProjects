@model IEnumerable<WebApplication17.Models.Employee>
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">


<h2>Index</h2>
<!--Add Jquery Datatable reference files-->
<link rel="stylesheet" href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" />
<div style="width:90%;">
    <table id="Jdatatable" class="table table-responsive table-bordered">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Position</th>
                <th>Birthday</th>
                <th>Age</th>
                <th>Office</th>
                <th>Salary</th>

            </tr>
        </thead>
       
        <tfoot>
            <tr>
                <th>Employee Name</th>
                <th>Position</th>
                <th>Birthday</th>
                <th>Age</th>
                <th>Office</th>
                <th>Salary</th>

            </tr>
        </tfoot>
    </table>
</div>
<div>
    @Html.ActionLink("Add Employee", "Create", new { @class = "form-control" })
</div>
@section scripts{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        debugger;
        $("#Jdatatable").DataTable({
            "ajax": {
                "url": "/Home/GetData",
                "type": "GET",
                "datatype":"json"
            },
            "columns": [
                        { "data": "Name", "autoWidth": true },
                        { "data": "Position", "autoWidth": true },
                        { "data": "Birthday", "autoWidth": true },
                        { "data": "Age", "autoWidth": true },
                        { "data": "Office", "autoWidth": true },
                        { "data": "Salary", "autoWidth": true }

            ]
        });
    });
    </script>
}
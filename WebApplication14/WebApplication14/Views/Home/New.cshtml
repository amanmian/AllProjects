

@model WebApplication14.Models.CustomerViewModel


@{
    ViewBag.Title = "Create";
}

<h2>Index</h2>
@using (Html.BeginForm("Save", "Customers"))

{
    @Html.AntiForgeryToken()
    <div class="col-md-offset-4">
        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <div class="form-group">
                    <div class="col-md-offset-8 col-md-8">
                        <input type="submit" value="All Students" class="btn btn-default" />
                    </div>
                </div>
                @Html.LabelFor(model => model.Customer.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Customer.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Customer.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Customer.Date_of_Birth, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Customer.Date_of_Birth, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Customer.Date_of_Birth, "", new { @class = "text-danger" })
                </div>
            </div>
         
            <div class="form-group">
                <div class="form-group">
                    @Html.LabelFor(m => m.Customer.MembershipType)
                   
                    <div class="form-group">
                        @Html.LabelFor(m => m.Customer.MembershipType)

                        @Html.DropDownListFor(m => m.Customer.MembershipType, new SelectList(Model.MembershipTypes, "Id", "Name"), "select", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Customer.MembershipType)
                    </div>


                    <div>
                        @Html.ActionLink("Add Student", "Create", new { @class = "form-control" })
                    </div>
                    

                </div>
            </div>

            <div class="button">
                <input type="submit" name="button" class="button1" value="Insert" formaction="Create" />
            </div></div>
         

    </div>
}



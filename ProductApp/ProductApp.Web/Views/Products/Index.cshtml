@model IEnumerable<ProductApp.Core.Product>

@{
    ViewBag.Title = "Product Details";
}
<style>
    .s1{margin-left:425px;}
    .head{text-align:center;}
</style>

<h2 class="head">Product Details</h2>

<p class="s1">
    @Html.ActionLink("Create New ", "Create", null, new { @class = "btn btn-primary btn-large" })
   
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.inStock)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inStock)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id}, new { @class = "btn btn-warning btn-large" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-success btn-large" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-large" })
        </td>
    </tr>
}

</table>
